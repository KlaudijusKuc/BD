{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "types": ["@nuxt/types", "node"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "moduleResolution": "bundler",
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
